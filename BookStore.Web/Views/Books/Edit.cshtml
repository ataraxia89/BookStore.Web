@using BookStore.Models.Enums
@model BookStore.Models.Books.UpdateBookDTO
@{
    ViewData["Title"] = $"Edit {Model.Title}";
}
<p>@ViewBag.ErrorMessage</p>
<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" />
        <span asp-validation-for="Author"></span>
    </div>
    <div class="form-group">
        <label asp-for="PublishDate">Publish Date</label>
        <input asp-for="PublishDate" />
        <span asp-validation-for="PublishDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pages"></label>
        <input asp-for="Pages" />
        <span asp-validation-for="Pages"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genre"></label>
        <select asp-for="Genre" asp-items="Html.GetEnumSelectList<BookGenre>()">
            <option selected="selected" value="">Please select book genre</option>
        </select>
        <span asp-validation-for="Genre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Synopsis"></label>
        <input asp-for="Synopsis" />
        <span asp-validation-for="Synopsis"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" />
        <span asp-validation-for="Rating"></span>
    </div>
    <div class="form-group">
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" />
        <span asp-validation-for="ISBN"></span>
    </div>

    <div>
        <input type="submit" value="Save" />
    </div>
</form>